<div class="container container-form">
  <br>
  <h1 class="text-center" style="color: black">Create a New Product</h1>
  <br>
  <div>
    <div class="container col-8">
      <%= simple_form_for @product, remote: true do |f| %>
        <div class="form-double">
          <%= f.input :name, wrapper_html:{class: "input-form"}, placeholder: 'ex: Boston Fern' %>
        </div>

        <div class="form-double">

          <%= f.input :price, wrapper_html:{class: "input-form"}, placeholder: '25' %>
        </div>
        <div class="form-double text">
          <%= f.input :description, wrapper_html:{class: "input-form"}, as: :text, placeholder: 'A feathery product with a 100% green effect.' %>
        </div>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <div class="form-button">
          <%= f.submit "Confirm", class: "btn btn-success", style: "padding-left: 20px; padding-right: 20px"%> <%= link_to "back", products_path, class: "btn btn-light", style: "padding-left: 20px; padding-right: 20px" %>
        </div>
      <% end %>
    </div>
    <br>
  </div>
</div>
