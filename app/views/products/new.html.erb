<div class="container container-form" style="border: solid darkgrey; margin: 8vh;background-color: #FDF4E0;border-radius: 10px" >
  <br>
  <h1 class="text-center" style="color: black">Sell My Item</h1>
  <p style=" font-size: 15px; text-align: center;"><strong>Please fill up the form below and you will be informed by email whether your item is accepted by ELYSIUM  </strong></p>
  <br>
  <div>
    <div class="container col-8">
      <%= simple_form_for @product, remote: true do |f| %>
        <div class="form-double">
          <%= f.input :name, wrapper_html:{class: "input-form"}, placeholder: 'ex: Skinny Jeans' %>
        </div>
        <div class="form-double">
          <%= f.input :price, wrapper_html:{class: "input-form"}, placeholder: '25â‚¬' %>
        </div>
        <div class="form-double text">
          <%= f.input :description, wrapper_html:{class: "input-form"}, as: :text, placeholder: 'Skinny Jeans from Zara - Worn Once' %>
        </div>
        <%= f.input :category, collection: ["Vintage", "New"], include_blank: false, selected: "Vintage" %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <div class="form-button">
          <%= f.submit "Confirm", class: "btn btn-index", style: "padding-left: 20px; padding-right: 20px"%> <%= link_to "back", products_path, class: "btn btn-light", style: "padding-left: 20px; padding-right: 20px" %>
        </div>
      <% end %>
    </div>
    <br>
  </div>
</div>
