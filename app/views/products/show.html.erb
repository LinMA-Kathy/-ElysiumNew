<style>
  .container-product {
    display: flex;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    box-sizing: border-box;
  }

  .left-part, .right-part {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100%;
    margin: 0 10px;
  }

  .left-part {
    align-items: center;
  }

  .right-part {
    padding: 20px;
  }

  .product-image {
    max-width: 100%;
    max-height: 500px;
    object-fit: cover;
  }
</style>

<div class="container-product">

  <div class="left-part">
    <%= cl_image_tag @product.photos.first.key, crop: :fill, class: "product-image" %>
  </div>

  <!-- Rest of the code remains the same -->
  <div class="right-part">
    <div class="meta-info">
      <h1><%= @product.name %></h1>
     
      <div class="product-price-infos">
        <h2><%= @product.price %>â‚¬ </h2> <i class="fa-solid fa-basket-shopping"></i>
      </div>
      <br>
      <div class="product-infos">
        <span><i class="fa-solid fa-info"></i> - <strong>product information</strong></span>
        <p><%= @product.description %></p>
      </div>

    </div>

    <div class="buttons">
      <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModal" style="font-size: 20px;">Buy Now</button></p>
      <br>
      <br>
      <br>

      <%= simple_form_for [@product, @transaction] do |f| %>
        <%= f.submit %>
      <% end %>
     
      <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModal" style="font-size: 20px;">See How It looks on You</button></p>
      <%= link_to "back", products_path, style:"padding-left: 20px; padding-right: 20px", class: "btn btn-secondary" %>
      <%= link_to 'delete', product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this offer?"}, style:'padding-left: 20px; padding-right: 20px', class: "btn btn-secondary"%>
      <div class="mt-3">

          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Update the product</button>
          <%= render 'shared/modalproductupdate', product: @product %>
       </div>
    <div>
    <div class="modal fade" id="measures" tabindex="-1" aria-labelledby="measuresLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="measuresLabel" >Measurement</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <div class="row mb-3">

<%= simple_form_for(users_path) do |f| %>
  <%= f.input :height %>
  <%= f.input :chest %>
  <%= f.input :waist %>
  <%= f.input :hip %>
  <%= f.submit %>
<% end %>
</div>
</div>

</div>

