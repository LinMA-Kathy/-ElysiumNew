    flex-wrap: wrap;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    box-sizing: border-box;
  }

  .left-part, .right-part {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100%;
    margin: 0 10px;
  }

  .left-part {
    align-items: center;
  }

  .right-part {
    padding: 20px;
  }

