<div class="container content-container">

<div class="container">
  <div class="row" style="height: 100%;">
    <div class="col-md-4 grid-space d-flex align-items-center">
      <div class="product-image">
        <%= image_tag @product.image_url, alt: @product.name, class: "img-fluid" %>
      </div>
    </div>

    <div class="col-md-4 d-flex flex-column justify-content-between grid-space" style="background-color: #e0e0e0;">
      <div class="grid-container">
        <div class="grid-separator">
          <h2><%= @product.name %></h2>
          <p><%= @product.description %></p>
        </div>
        <div class="mt-3">
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Update the product</button>
          <%= link_to "Back to products", products_path %>
          <%= button_to "Delete this product", product_path(@product), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          <%= render 'shared/modalproductupdate', product: @product %>
        </div>
      </div>
    </div>

    <div class="col-md-4 grid-space" style="background-color: #f0f0f0;">
      <!-- Removed the reviews-related code -->
    </div>
  </div>
</div>
</div>
