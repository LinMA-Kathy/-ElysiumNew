<div class="container-product row">
   <div class="left-part col-6">
     <%= cl_image_tag @product.photos.first.key, crop: :fill, class: "product-image" %>
   </div>

   <div class="right-part col-6">
     <div class="meta-info">
       <h1><%= @product.name %></h1>

       <div class="product-price-infos">
         <h2><%= @product.price %>â‚¬ </h2>
       </div>
       <br>
       <br>
       <div class="product-infos">
         <span><i class="fa-solid fa-info"></i> - <strong>Product Information</strong></span>
         <p><%= @product.description %></p>
       </div>
       <br>
       <br>
       <div class="product-infos">
       <span><i class="fa-solid fa-info"></i> - <strong> New Item / Vintage Item</strong></span>
         <p><%= @product.category %></p>
       </div>
     </div>
     <br>
     <br>
     <% if @product.transactions.where(user: current_user).any? %>
        <p>The item already exists in the cart</p>
        <%= link_to 'Go to my cart to check out', dashboard_path, data: {turbo: false}, class:"btn btn-light me-3", style:"font-size: 20px; background-color: #FDF4E0" %>
        <% else %>
          <div class="buttons">
            <div class="d-flex align-items-center">
              <%= simple_form_for [@product, @transaction] do |f| %>
                <div class="buttons">
                  <div class="d-flex align-items-center">
                    <button type="submit" class="btn btn-light me-3" style="font-size: 20px; background-color: #FDF4E0;">
                      <i class="fas fa-cart-plus me-2"></i>Purchase Now
                    </button>
                  </div>
                </div>
              <% end %>
               <% if current_user.height.nil? || current_user.height == '' %>
               <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#measures" style="font-size: 20px; background-color: #FDF4E0;">
                <i class="fas fa-eye me-2"></i>Add my measurements
              </button>
              <%= render 'shared/usermeasures' %>
              <% else %>
              <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#measures" style="font-size: 20px; background-color: #FDF4E0;">
                <i class="fas fa-eye me-2"></i>See How It Looks
              </button>
              <%= render 'shared/howitlooks' %>
              <% end %>
            </div>
        <% end %>

       <br>
      <br>
  </div>
